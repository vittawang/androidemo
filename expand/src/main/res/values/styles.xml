<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="RippleView">
        <attr name="min_circle_radius" format="dimension" />
        <attr name="circle_count" format="integer" />
        <attr name="ripple_speed" format="integer" />
        <attr name="ripple_color" format="color" />
        <attr name="stroke_color" format="color"/>
        <attr name="stroke_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="OnlineChatAvatarView">
        <attr name="item_length" format="dimension"/>
        <attr name="item_pressed_length" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="OnlineAvatarView">
        <attr name="view_length" format="dimension" />
        <attr name="view_pressed_length" format="dimension" />
    </declare-styleable>

</resources>
