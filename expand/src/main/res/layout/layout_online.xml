<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="#50FFFF00">

    <TextView
        android:id="@+id/last_tv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="72dp"
        android:background="@drawable/circle_white"
        android:gravity="center"
        android:text="50"
        android:textColor="#000"/>

    <ImageView
        android:id="@+id/last_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/circle_white"
        android:padding="1dp"
        android:src="@drawable/avatar"/>

    <com.sunspot.expand.chat.OnlineChatAvatarView
        android:id="@+id/online_view"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:item_length="42dp"
        app:item_pressed_length="8dp" />

    <ImageView
        android:id="@+id/first_iv"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:background="@drawable/circle_white"
        android:padding="1dp"
        android:src="@drawable/avatar"
        android:alpha="0"/>

</FrameLayout>